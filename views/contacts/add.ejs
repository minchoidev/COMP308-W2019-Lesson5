<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>

            <!--Abbreviation
                form.form[method="POST"]>div.form-group
                    label[for="FirstNameTextField"]+input.form-control#FirstNameTextField[placeholder="Enter First Name"]-->
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="FirstNameTextField">First Name</label>
                    <input type="text" class="form-control" id="FirstNameTextField" placeholder="Enter First Name"
                        name="firstName" required>
                    <!-- 'name' is variable name. Required means you cannot move on without filling out this -->
                </div>

                <div class="form-group">
                    <label for="LastNameTextField">Last Name</label>
                    <input type="text" class="form-control" id="LastNameTextField" placeholder="Enter Last Name"
                        name="lastName" required>
                </div>

                <div class="form-group">
                    <label for="AgeNameTextField">Age</label>
                    <input type="text" class="form-control" id="AgeNameTextField" placeholder="Enter Age" name="age"
                        required>
                </div>
                <button class="btn btn-primary" type="submit" value="Submit"><i class="fa fa-edit"></i> Submit</button>

            </form>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>